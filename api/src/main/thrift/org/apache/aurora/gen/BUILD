python2_thrift_library(
  name = '_api',
  sources = [
    'api.thrift',
  ],
  dependencies = [
    '3rdparty/python:thrift',
  ],
)

python2_thrift_library(
  name = '_test',
  sources = globs('*test.thrift'),
  dependencies = [
    '3rdparty/python:thrift',
  ],
)

python2_thrift_library(
  name = '_storage',
  sources = ['storage.thrift'],
  dependencies = [
    '3rdparty/python:thrift',
    ':_api',
  ],
)

python_library(
  compatibility = python2_compatibility(),
  dependencies = [
    ':_api',
    ':_test',
    ':_storage',
  ],
  provides = setup_py(
    name = 'apache.aurora.thrift',
    version = aurora_version(),
    description = 'Autogenerated Aurora thrift schemas.',
  )
)

python3_thrift_library(
  name = '_api.py3',
  sources = [
    'api.thrift',
  ],
  dependencies = [
    '3rdparty/python:thrift',
    'src/main/python/apache/aurora/thrift:protocol',
  ],
)

python3_thrift_library(
  name = '_test.py3',
  sources = globs('*test.thrift'),
  dependencies = [
    '3rdparty/python:thrift',
    'src/main/python/apache/aurora/thrift:protocol',
  ],
)

python3_thrift_library(
  name = '_storage.py3',
  sources = ['storage.thrift'],
  dependencies = [
    '3rdparty/python:thrift',
    ':_api.py3',
    'src/main/python/apache/aurora/thrift:protocol',
  ],
)

python_library(
  name = 'python3',
  compatibility = python3_compatibility(),
  dependencies = [
    ':_api.py3',
    ':_test.py3',
    ':_storage.py3',
    'src/main/python/apache/aurora/thrift:protocol',
  ],
  provides = setup_py(
    name = 'apache.aurora.thrift',
    version = aurora_version(),
    description = 'Autogenerated Aurora thrift schemas.',
  )
)
